<!--pages/operaResult/operaResult.wxml-->
<view class="container">


  <view wx:if="{{ operaType ==='pay-fail-password-error' }}" class='wrapper pay-fail-password-error'>
    <image src="/images/image-error.png"></image>
    <text class='opera-reulst'>支付失败</text>
    <text class='opera-tip'>你已连续5次输入错误密码，请1小时后再试</text>
    <button bindtap="chooseTheHouse">返回账单</button>
  </view>


  <view wx:if="{{ operaType ==='pay-fail-some-error' }}" class='wrapper pay-fail-some-error'>
    <image src="/images/image-error.png"></image>
    <text class='opera-reulst'>支付失败</text>
    <text class='opera-tip'></text>
    <button bindtap="chooseTheHouse">返回账单</button>
  </view>

  <view wx:if="{{ operaType ==='pay-success-rent' }}" class='wrapper pay-success-rent'>
    <image src="/images/image-success.png"></image>
    <text class='opera-reulst'>交租成功</text>
    <text class='opera-tip'></text>
    <button bindtap="chooseTheHouse">返回账单</button>
  </view>
 
  <view wx:if="{{ operaType ==='confirm-house-success' }}" class='wrapper confirm-house-success'>
    <image src="/images/image-success.png"></image>
    <text class='opera-reulst'>你已成功绑定该房源</text>
    <text class='opera-tip'></text>
    <button bindtap="chooseTheHouse">回到首页</button>
  </view>

</view>
