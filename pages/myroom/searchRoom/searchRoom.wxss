/* pages/searchRoom/searchRoom.wxss */

.container{
  padding-top: 30rpx;
  box-sizing: border-box;
}



.choose-city{
  padding: 20rpx 30rpx;
  background-color: white;
}

.choose-city text{
  font-size:34rpx;
  color:rgba(178,178,178,1);
  line-height:48rpx;
}

.address-wrapper{
  background-color: white;
  margin-top: 30rpx;
  padding: 20rpx 30rpx;
}

.address-wrapper textarea{
  width: 100%;
  font-size:34rpx;
  color:black;
  background-color: white;
  height: 160rpx;
}

.item-guess-house-wrapper{
  margin-top: 20rpx;
}

.item-guess-house{
  background-color: white;
}

.item-guess-house text{
  display: inline-block;
  padding: 20rpx 30rpx;
  font-size:34rpx;
  color:rgba(53,53,53,1);
  line-height:48rpx;
}

.item-guess-house .line{
  margin: 0 30rpx;
  background-color: #DEDEDE;
  height: 2rpx;
}

.btn-wrapper {
  text-align: center;
}

.btn-wrapper button{
  margin-top: 180rpx;
  padding: 23rpx 189rpx;
}